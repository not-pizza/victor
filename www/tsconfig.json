{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },  
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}